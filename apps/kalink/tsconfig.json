{
  "extends": "@kalink-ui/typescript-config/nextjs.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.d.ts",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    "eslint.config.mts"
  ],
  "exclude": [
    "node_modules",
    "app/(payload)/**",
    ".next/types/app/(payload)/**",
    ".next/types/validator.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "@payload-config": ["./payload.config.ts"],
      "@kalink-ui/seedly": ["../../packages/seedly/src/index.ts"],
      "@kalink-ui/seedly/*": ["../../packages/seedly/src/*"],
      "@kalink-ui/dibbly": ["../../packages/dibbly/src/index.ts"],
      "@kalink-ui/dibbly/*": ["../../packages/dibbly/src/*"],
      "@kalink-ui/canopy": ["../../packages/canopy/src/index.ts"],
      "@kalink-ui/canopy/*": ["../../packages/canopy/src/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/seedly"
    },
    {
      "path": "../../packages/dibbly"
    },
    {
      "path": "../../packages/canopy"
    }
  ]
}
