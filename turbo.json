{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@kalink-ui/eslint-config#tsc"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "POSTGRES_URL",
        "GITHUB_TOKEN",
        "NEON_PROJECT_ID",
        "PAYLOAD_SECRET",
        "RESEND_KEY",
        "TURBO_TEAM",
        "TURBO_TOKEN"
      ]
    },
    "lint": {
      "dependsOn": ["@kalink-ui/eslint-config#tsc"]
    },
    "lint:fix": {
      "dependsOn": ["@kalink-ui/eslint-config#tsc"]
    },
    "tsc": {
      "dependsOn": ["^tsc"],
      "outputs": [
        "dist/**/*.mjs",
        "dist/**/*.d.mts",
        "dist/**/*.map",
        "tsconfig.tsbuildinfo"
      ]
    },
    "generate:types": {
      "outputs": ["apps/**/payload-types.ts"],
      "dependsOn": []
    },
    "generate:importmap": {
      "outputs": ["apps/**/app/(payload)/admin/importMap.js"],
      "dependsOn": []
    },
    "payload:prepare": {
      "dependsOn": ["generate:importmap", "generate:types"]
    },
    "test": {
      "dependsOn": []
    },
    "test:watch": {
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
